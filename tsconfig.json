{
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "module": "ES2020",
      "declaration": false
    }
  },
  "compilerOptions": {
    "lib": ["esnext","dom"],
    "types": ["node"],
    "outDir": "dist",
    "strict": true,
    "target": "ES2020",
    "declaration": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "declarationDir": "./types",
    "typeRoots": ["./src/@types"]
  },
  "include": [
    "src/**/*"
  ]
}
